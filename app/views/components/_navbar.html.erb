<div class="navbar-wagon" id="navbar">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.jpg", width: 406 / 4, height: 135 / 5 %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to 'Offer a car', new_car_path, class: "navbar-wagon-item navbar-wagon-link classic_font" %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <img src="https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/c49aikeo5oasrl2nxrwt.jpg" class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
          <% if user_signed_in? %>
          <li><%= link_to "Sign out", destroy_user_session_path, method: "delete" %></li>
          <% else %>
          <li><%= link_to "Sign in", new_user_session_path %></li>
           <%end%>
        </ul>
      </div>
    </div>
  </div>
