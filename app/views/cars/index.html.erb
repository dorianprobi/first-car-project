<% @cars.each do |car| %>
   <div class="outer_box">
     <div class="flexbox">
       <div class="grid">
         <div class="image">
          <p>
            <%= cl_image_tag car.photo_url, width: 262 if car.photo_url.present? %>
          </p>
         </div>
         <div class="information">
           <div class="price_brand">
             <h4 class="cars_brand classic_font" id="car_name"><b><%=car.brand%></b>
             <h4 class="classic_font"><b><%= car.price %> â‚¬</b></h4>
           </div>
           <p class="cars_description classic_font"style="text-align: center;"><%= %></p>
           <div class="symbols_and_buttom">
             <p class="buttom_information"><%= link_to "Book", car_path(car), id:"book_buttom",class: "btn btn-treehouse" %></p>
             <div class="symbols">
               <p class="fair_fuel"><i class="fas fa-gas-pump "></i>Fair refuel</p>
               <p class="insurance"><i class="fas fa-check"></i>Good insurance</p>
             </div>
           </div>
         </div>
       </div>
     </div>
   </div>
<% end %>
