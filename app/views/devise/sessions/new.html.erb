<div class="signup_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/761820/pexels-photo-761820.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">


    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="view_signin">
    <div class="signin_page_new">
      <div style="text-align:center;" class="signin-small_container">
        <h2 style="color:white;" class="classic_font">Sign In</h2>
         <p class="Please enter your Infos">
          <div class="signin_input">
            <div class="signin-input_field">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
           <%= f.submit "Sign in", class: "btn btn-pr" %>

          </div>
        </div>
      <%= render "devise/shared/links" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
