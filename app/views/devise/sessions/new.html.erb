<div class="sign_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/761820/pexels-photo-761820.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="page-container">
    <div class="login_container">
      <div class="form-inputs">
        <div class="login_header">
          <h2>Log in</h2>
        </div>
        <div class="login_email-input">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
        </div>
        <div class="login_password-input">
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <div class="login_button">
            <%= f.button :submit, "Log in" %>
          </div>
        </div>
      <%= render "devise/shared/links" %>
      <% end %>
      </div>
    </div>
  </div>
</div>


