<div class="sign_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/761820/pexels-photo-761820.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">
  <div class="banner-content">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

<div class="pagewrap">
  <div class="page-container">
    <div class="signup_container">
      <div class="form-inputs">
        <div class="sign_up_header">
          <h2>Sign Up</h2>
        </div>
        <div class="email-input">
          <%= f.input :email,
                      required: true,
                      autofocus: true ,
                      input_html: { autocomplete: "email" }%>
        </div>
        <div class="password-input">
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="password_confirmation">
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-<actions></actions>">
          <div class="signup_button">
            <%= f.button :submit, "Sign up" %>
          </div>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<% end %>


  </div>
</div>


