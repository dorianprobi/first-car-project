<div class="signup_banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.pexels.com/photos/761820/pexels-photo-761820.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');">


    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="view_signup">
    <div class="signup_page_new">
      <div style="text-align:center;" class="signup-small_container">
        <h2 style="color:white;" class="classic_font">Sign Up</h2>
         <p class="Please enter your Infos">
          <div class="signup_input">
            <div class="signup-input_field">
              <%= f.input :email,
                          required: true,
                          autofocus: true ,
                          input_html: { autocomplete: "email" }%>

              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password" } %>

              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" } %>

                <div class="form-<actions></actions>">
                  <%= f.button :submit, "Sign up", class: "btn btn-pr" %>
                </div>
              </div>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
